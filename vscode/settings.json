{
    "editor.tabSize": 2,
    "ruby.codeCompletion": "rcodetools",
    "files.insertFinalNewline": true,
    "explorer.confirmDragAndDrop": false,
    "javascript.updateImportsOnFileMove.enabled": "always",
    "ruby.intellisense": "rubyLocate",
    "explorer.confirmDelete": false,
    "[dart]": {
        "editor.formatOnSave": true,
        "editor.formatOnType": true,
        "editor.rulers": [
            80
        ],
        "editor.selectionHighlight": false,
        "editor.suggest.snippetsPreventQuickSuggestions": false,
        "editor.suggestSelection": "first",
        "editor.tabCompletion": "onlySnippets",
        "editor.wordBasedSuggestions": "off"
    },
    "security.workspace.trust.untrustedFiles": "open",
    "editor.largeFileOptimizations": false,
    "vim.vimrc.enable": true,
    "vim.vimrc.path": "~/.vimrc",
    "editor.renderWhitespace": "trailing",
    "diffEditor.ignoreTrimWhitespace": false,
    "vim.autoSwitchInputMethod.enable": true,
    // "vim.autoSwitchInputMethod.defaultIM": "com.apple.inputmethod.Kotoeri.RomajiTyping.Roman",
    // "vim.autoSwitchInputMethod.obtainIMCmd": "/opt/homebrew/bin/im-select",
    // "vim.autoSwitchInputMethod.switchIMCmd": "/opt/homebrew/bin/im-select {im}",
    "vim.foldfix": true,
    "search.exclude": {
        "public/assets/*": true,
        "public/assets/**/*": true,
        "vendor/": true,
        "vendor/bundle/**/*": true
    },
    "solargraph.autoformat": true,
    "solargraph.bundlerPath": "~/.rbenv/shims/bundle",
    "solargraph.diagnostics": true,
    "solargraph.formatting": true,
    "editor.minimap.enabled": false,
    "extensions.ignoreRecommendations": true,
    "[typescript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "[ruby]": {
        "editor.defaultFormatter": "misogi.ruby-rubocop",
        "editor.formatOnSave": true,
        "editor.formatOnType": true,
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "files.trimTrailingWhitespace": true,
        "files.insertFinalNewline": true,
        "files.trimFinalNewlines": true,
        "editor.rulers": [
            120
        ],
        "editor.semanticHighlighting.enabled": true
    },
    "[javascript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "files.associations": {
        "*.vue": "vue"
    },
    "redhat.telemetry.enabled": false,
    "rdbg.rubyVersionManager": "rbenv",
    "vue.autoInsert.dotValue": true,
    "vue.inlayHints.missingProps": true,
    "github.copilot.enable": {
        "*": true,
        "plaintext": false,
        "markdown": true,
        "scminput": false
    },
    "window.zoomLevel": 2,
    "rubyLsp.customRubyCommand": "custom",
    "ruby.rubocop.executePath": "~/.rbenv/shims/",
    "ruby.rubocop.onSave": false,
    "editor.acceptSuggestionOnEnter": "off",
    "emmet.useInlineCompletions": true,
    "editor.quickSuggestions": {
        "other": "off"
    },
    "editor.inlineSuggest.suppressSuggestions": true,
    "editor.formatOnType": true,
    "rubyLsp.formatter": "rubocop",
    "editor.formatOnSaveMode": "file",
    "workbench.colorTheme": "GitHub Dark Colorblind (Beta)",
    "vim.autoindent": false,
    "github.copilot.chat.localeOverride": "ja",
    "editor.suggestOnTriggerCharacters": false,
    "[scss]": {
        "editor.defaultFormatter": "rvest.vs-code-prettier-eslint"
    },
    "workbench.activityBar.location": "top",
    "github.copilot.editor.enableAutoCompletions": true,
    "todo-tree.general.tags": [
        "BUG",
        "HACK",
        "FIXME",
        "TODO",
        "XXX",
        "REVIEW",
        "OPTIMIZE",
        "CHANGED",
        "NOTE",
        "WARNING"
    ],
    "workbench.editor.pinnedTabSizing": "shrink",
    "terminal.integrated.defaultProfile.osx": "zsh",
    "markmap.defaultOptions": "{ \"maxWidth\": 200, \"duration\": 0 }",
    "workbench.tree.indent": 12,
    "window.closeWhenEmpty": true,
    "indentRainbow.indicatorStyle": "light",
    "editor.smoothScrolling": true,
    "workbench.list.smoothScrolling": true,
    "terminal.integrated.smoothScrolling": true,
    "viml.highVimHelpIndentStylePriority": false,
    "vim.autoSwitchInputMethod.defaultIM": "com.apple.keylayout.ABC",
    "[html]": {
        "editor.defaultFormatter": "vscode.html-language-features"
    },
    "files.trimTrailingWhitespace": true,
    "files.trimFinalNewlines": true,
    "terminal.integrated.suggest.quickSuggestions": false,
    "editor.suggest.selectionMode": "never",
    "hediet.vscode-drawio.resizeImages": null,
    "git.autofetch": true,
    "githubPullRequests.pullBranch": "never",
    "php.debug.executablePath": "",
    "files.watcherExclude": {
        "**/logs/*/**": true,
        "**/vendor/*/**": true,
        "**/node_modules/*/**": true,
        "**/tmp/*/**": true,
    },
    "files.refactoring.autoSave": false,
    "files.trimTrailingWhitespaceInRegexAndStrings": false,
    "testing.saveBeforeTest": false,
    "intelephense.diagnostics.run": "onSave",
    "makefile.saveBeforeBuildOrConfigure": false,
    "vim.overrideCopy": false,
    "vim.surround": false,
    "vim.easymotionDimBackground": false,
    "vim.incsearch": false,
    "vim.mouseSelectionGoesIntoVisualMode": false,
    "vim.wrapscan": false,
}
