{
    "editor.tabSize": 2,
    "ruby.codeCompletion": "rcodetools",
    "files.insertFinalNewline": true,
    "explorer.confirmDragAndDrop": false,
    "javascript.updateImportsOnFileMove.enabled": "always",
    "ruby.intellisense": "rubyLocate",
    "explorer.confirmDelete": false,
    "[dart]": {
        "editor.formatOnSave": true,
        "editor.formatOnType": true,
        "editor.rulers": [
            80
        ],
        "editor.selectionHighlight": false,
        "editor.suggest.snippetsPreventQuickSuggestions": false,
        "editor.suggestSelection": "first",
        "editor.tabCompletion": "onlySnippets",
        "editor.wordBasedSuggestions": "off"
    },
    "security.workspace.trust.untrustedFiles": "open",
    "editor.largeFileOptimizations": false,
    "vim.vimrc.enable": true,
    "vim.vimrc.path": "~/.vimrc",
    "editor.renderWhitespace": "trailing",
    "diffEditor.ignoreTrimWhitespace": false,
    "vim.autoSwitchInputMethod.enable": true,
    // "vim.autoSwitchInputMethod.defaultIM": "com.apple.inputmethod.Kotoeri.RomajiTyping.Roman",
    // "vim.autoSwitchInputMethod.obtainIMCmd": "/opt/homebrew/bin/im-select",
    // "vim.autoSwitchInputMethod.switchIMCmd": "/opt/homebrew/bin/im-select {im}",
    "vim.foldfix": true,
    "search.exclude": {
        "public/assets/*": true,
        "public/assets/**/*": true,
        "vendor/": true,
        "vendor/bundle/**/*": true
    },
    "solargraph.autoformat": true,
    "solargraph.bundlerPath": "~/.rbenv/shims/bundle",
    "solargraph.diagnostics": true,
    "solargraph.formatting": true,
    "editor.minimap.enabled": false,
    "extensions.ignoreRecommendations": true,
    "[typescript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "[ruby]": {
        "editor.defaultFormatter": "misogi.ruby-rubocop",
        "editor.formatOnSave": true,
        "editor.formatOnType": true,
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "files.trimTrailingWhitespace": true,
        "files.insertFinalNewline": true,
        "files.trimFinalNewlines": true,
        "editor.rulers": [
            120
        ],
        "editor.semanticHighlighting.enabled": true
    },
    "[javascript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "files.associations": {
        "*.vue": "vue"
    },
    "redhat.telemetry.enabled": false,
    "rdbg.rubyVersionManager": "rbenv",
    "vue.autoInsert.dotValue": true,
    "vue.inlayHints.missingProps": true,
    "github.copilot.enable": {
        "*": true,
        "plaintext": false,
        "markdown": false,
        "scminput": false
    },
    "window.zoomLevel": 2,
    "rubyLsp.customRubyCommand": "custom",
    "workbench.activityBar.location": "top",
    "ruby.rubocop.executePath": "~/.rbenv/shims/",
    "ruby.rubocop.configFilePath": "~/Documents/git/lifood-admin/.rubocop.yml",
    "ruby.rubocop.onSave": false,
    "editor.acceptSuggestionOnEnter": "off",
    "emmet.useInlineCompletions": true,
    "editor.quickSuggestions": {
        "other": "off"
    },
    "editor.inlineSuggest.suppressSuggestions": true,
    "editor.formatOnType": true,
    "rubyLsp.formatter": "rubocop",
    "editor.formatOnSaveMode": "modifications",
    "workbench.colorTheme": "GitHub Dark Colorblind (Beta)",
    "vim.autoindent": false,
    "github.copilot.chat.localeOverride": "ja",
    "editor.suggestOnTriggerCharacters": false,
    "[scss]": {
        "editor.defaultFormatter": "rvest.vs-code-prettier-eslint"
    },
}
