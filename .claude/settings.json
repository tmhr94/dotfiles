{
  "permissions": {
    "allow": [
      "WebFetch",
      "WebSearch",
      "mcp__context7__*",
      "Bash(flutter analyze:*)",
      "Bash(go tool golangci-lint run:*)"
    ]
  },
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "afplay /System/Library/Sounds/Glass.aiff"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline.sh"
  },
  "env": {
    // "ENABLE_TOOL_SEARCH": "true",
    // "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1"
  }
}
