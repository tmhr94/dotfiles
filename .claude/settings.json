{
  "permissions": {
    "allow": [
      "WebFetch",
      "WebSearch",
      "mcp__context7__*",
      "Bash(flutter analyze:*)",
      "Bash(go tool golangci-lint run:*)",
      "Bash(git add:*)",
      "Bash(go test:*)"
    ]
  },
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "afplay /System/Library/Sounds/Glass.aiff"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline.sh"
  },
  "enabledPlugins": {
    "gopls-lsp@claude-plugins-official": true
  }
}
